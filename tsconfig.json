{
  "compilerOptions": {
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "strict": true,
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@libs/*": ["libs/*"],
      "@resources/*": ["resources/*"],
      "@functions/*": ["functions/*"],
      "@integrationTests/*": ["integrationTests/*"]
    }
  },
  "include": ["./**/*.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true
  }
}
